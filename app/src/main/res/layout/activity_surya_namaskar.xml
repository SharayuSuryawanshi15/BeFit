<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_surya_namaskar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.befit.SuryaNamaskar">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wallp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:src="@drawable/su"
                android:scaleType="fitXY"
                android:id="@+id/s1"
                android:layout_marginTop="10dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="290dp"
                android:id="@+id/next1"
                android:textAlignment="center"
                android:text="Click on above image for next"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/text1"
                android:layout_marginTop="350dp"
                android:textColor="#000"



                android:text="1.Stand erect with the feet held together. \n\n 2.Bring the two hands together and the palms touching each other at the chest level. Look straight ahead. \n\n 3.Breathe in normally. This will give a sense of relaxation. "
                android:textSize="20dp"/>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
