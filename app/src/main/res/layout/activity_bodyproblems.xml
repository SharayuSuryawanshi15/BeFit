<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bodyproblems"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.befit.bodyproblems"
    android:background="@drawable/wallp">
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
         />
    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/kneepain"
        android:id="@+id/kneep"
        android:scaleType="fitXY"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/backpain"
        android:id="@+id/backp"
        android:layout_marginLeft="170dp"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:text="Back Pain"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="20dp"

        />

    <TextView
        android:text="Knee Pain"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kneep"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:id="@+id/textView3" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:text="Click on Image "
        android:textAlignment="center"/>

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="290dp"
        android:id="@+id/armp"
        android:src="@drawable/armpain"
        android:scaleType="fitXY"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:text="Shoulder Pain"
        android:layout_marginLeft="200dp"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="290dp"
        android:scaleType="fitXY"
        android:layout_marginLeft="200dp"
        android:id="@+id/shoulderp"
        android:src="@drawable/shoulderpain"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:text="Arm Pain"
        android:textSize="20dp"
        android:textStyle="bold"/>


</RelativeLayout>
